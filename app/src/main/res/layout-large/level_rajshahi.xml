<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/level_wood_back">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_pol_text"
                style="@style/level_text"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_lev_pol"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/percent_pollution_levview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_un_text"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                style="@style/level_text"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_lev_un"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/percent_unorganized_levview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_lev_risk"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                style="@style/level_text"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_lev_risk"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/percent_risk_levview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/level_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_time_text"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_time"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_score_text"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_score"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/level_rajshahi">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:id="@+id/img_dustbin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/animation_dustbin"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/img_banana_layer_1"
            android:background="@drawable/banana_layer1"
            android:layout_alignBottom="@+id/img_banana_layer_2"
            android:layout_toLeftOf="@+id/img_banana_layer_2"
            android:layout_toStartOf="@+id/img_banana_layer_2"
            android:layout_marginRight="89dp"
            android:layout_marginEnd="89dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/img_banana_layer_2"
            android:background="@drawable/banana_layer2"
            android:layout_marginRight="246dp"
            android:layout_marginEnd="246dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/img_dustbin"
            android:layout_toStartOf="@+id/img_dustbin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/level_wood_back">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:id="@+id/btn_map_in_level"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/btn_wood"
            android:background="#5A2C23"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint"
            android:id="@+id/button3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/btn_wood"
            android:background="#5A2C23"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"
            android:id="@+id/linearLayout3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/task_completed"
                style="@style/level_text"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_task"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/task_remain"
                style="@style/level_text"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_task_remain"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="26sp"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/btn_reset_level"
            style="@style/btn_wood"
            android:background="#5A2C23"
            android:layout_alignBottom="@+id/btn_map_in_level"
            android:layout_toRightOf="@+id/btn_map_in_level"
            android:layout_toEndOf="@+id/btn_map_in_level"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
    </RelativeLayout>

</LinearLayout>
