<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_homepage">


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_progress"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_process_front" />

    <ToggleButton
        android:id="@+id/btn_sound"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/check_sound"
        android:layout_alignTop="@+id/btn_progress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btn_about"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/background_btn_about"
        android:text="@string/btn_about"
        android:textSize="16sp"/>

    <Button
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:id="@+id/btn_start"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_about"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_btn_start"
        android:text="@string/btn_start"
        android:textSize="18sp"
        style="@style/btn_wood"/>

    <Button
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:id="@+id/btn_language"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_start"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_btn_language"
        android:text="@string/btn_language"
        android:textSize="17sp"
        style="@style/btn_wood"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:id="@+id/btn_exit"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_language"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_btn_exit"
        android:text="@string/btn_exit"
        android:textSize="17sp"
        style="@style/btn_wood"/>


</RelativeLayout>
