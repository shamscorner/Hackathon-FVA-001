<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_homepage">


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_progress"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_btn_progress" />

    <ToggleButton
        android:id="@+id/btn_sound"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/check_sound"
        android:layout_alignTop="@+id/btn_progress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:id="@+id/btn_about"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_btn_about"
        android:text="@string/btn_about"
        android:textSize="16sp"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:id="@+id/btn_start"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btn_about"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_btn_start"
        android:text="@string/btn_start"
        android:textSize="30sp"
        style="@style/btn_wood"/>

    <Button
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:id="@+id/btn_language"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn_start"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_btn_language"
        android:text="@string/btn_language"
        android:textSize="30sp"
        style="@style/btn_wood"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:id="@+id/btn_exit"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn_language"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_btn_exit"
        android:text="@string/btn_exit"
        android:textSize="30sp"
        android:onClick="closeApplication"
        style="@style/btn_wood"/>


</RelativeLayout>
