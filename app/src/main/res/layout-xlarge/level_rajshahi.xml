<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/level_wood_back">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_pol_text"
                style="@style/level_text"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_lev_pol"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/percent_pollution_levview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_un_text"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                style="@style/level_text"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_lev_un"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/percent_unorganized_levview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_lev_risk"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                style="@style/level_text"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pro_lev_risk"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/percent_risk_levview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/level_text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_time_text"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_time"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lev_score_text"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                style="@style/level_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_score"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/level_rajshahi">
        <ImageView
            android:layout_width="240dp"
            android:layout_height="250dp"
            android:id="@+id/img_dustbin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/animation_dustbin"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/img_banana_layer_1"
            android:background="@drawable/banana_layer1"
            android:layout_marginRight="121dp"
            android:layout_marginEnd="121dp"
            android:layout_alignTop="@+id/img_banana_layer_2"
            android:layout_toLeftOf="@+id/img_banana_layer_2"
            android:layout_toStartOf="@+id/img_banana_layer_2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/img_banana_layer_2"
            android:background="@drawable/banana_layer2"
            android:layout_marginRight="286dp"
            android:layout_marginEnd="286dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/img_dustbin"
            android:layout_toStartOf="@+id/img_dustbin" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/img_billboard_1"
            android:background="@drawable/billboard2_bad"
            android:layout_alignBottom="@+id/instruction"
            android:layout_toRightOf="@+id/cupandstraw"
            android:layout_toEndOf="@+id/cupandstraw" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:id="@+id/img_billboard_2"
            android:background="@drawable/billboard1_bad"
            android:layout_alignBottom="@+id/direction"
            android:layout_toRightOf="@+id/bone"
            android:layout_toEndOf="@+id/bone" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:id="@+id/img_bench"
            android:background="@drawable/bench"
            android:layout_above="@+id/tap"
            android:layout_toRightOf="@+id/cupandstraw"
            android:layout_toEndOf="@+id/cupandstraw" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/poster1"
            android:background="@drawable/poster1"
            android:layout_below="@+id/img_billboard_1"
            android:layout_toRightOf="@+id/img_bench"
            android:layout_toEndOf="@+id/img_bench" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/poster2"
            android:background="@drawable/poster2"
            android:layout_alignBottom="@+id/poster1"
            android:layout_toRightOf="@+id/img_billboard_1"
            android:layout_toEndOf="@+id/img_billboard_1" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/poster4"
            android:background="@drawable/poster4"
            android:layout_alignTop="@+id/poster2"
            android:layout_toRightOf="@+id/poster2"
            android:layout_toEndOf="@+id/poster2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/poster3"
            android:background="@drawable/poster3"
            android:layout_alignBottom="@+id/poster4"
            android:layout_toRightOf="@+id/poster4"
            android:layout_toEndOf="@+id/poster4"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:id="@+id/poster5"
            android:background="@drawable/poster5"
            android:layout_below="@+id/instruction"
            android:layout_toRightOf="@+id/direction"
            android:layout_toEndOf="@+id/direction" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:id="@+id/tap"
            android:background="@drawable/animation_water_tap"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/img_dustbin"
            android:layout_toStartOf="@+id/img_dustbin" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/street_light_1"
            android:background="@drawable/street_signal1"
            android:layout_above="@+id/img_billboard_2"
            android:layout_toRightOf="@+id/street_light_2"
            android:layout_toEndOf="@+id/street_light_2"
            android:layout_marginBottom="33dp" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:id="@+id/street_light_2"
            android:background="@drawable/street_signal2"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_above="@+id/light2"
            android:layout_toLeftOf="@+id/bottle"
            android:layout_toStartOf="@+id/bottle" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/book_shop"
            android:background="@drawable/book_shop"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/paper"
            android:layout_toEndOf="@+id/paper" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/direction"
            android:background="@drawable/direction"
            android:layout_below="@+id/book_shop"
            android:layout_toRightOf="@+id/book_shop"
            android:layout_toEndOf="@+id/book_shop" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="60dp"
            android:id="@+id/instruction"
            android:background="@drawable/instruction"
            android:layout_below="@+id/direction"
            android:layout_alignRight="@+id/direction"
            android:layout_alignEnd="@+id/direction" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/instruction2"
            android:background="@drawable/instruction"
            android:layout_alignTop="@+id/img_billboard_1"
            android:layout_toLeftOf="@+id/garbage2"
            android:layout_toStartOf="@+id/garbage2" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:id="@+id/light1"
            android:background="@drawable/light1_1"
            android:layout_above="@+id/img_billboard_2"
            android:layout_alignLeft="@+id/shoes"
            android:layout_alignStart="@+id/shoes" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:id="@+id/light2"
            android:background="@drawable/light2_1"
            android:layout_above="@+id/instruction2"
            android:layout_toLeftOf="@+id/light1"
            android:layout_toStartOf="@+id/light1" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="105dp"
            android:id="@+id/garbage1"
            android:background="@drawable/garbage1"
            android:layout_alignBottom="@+id/cupandstraw"
            android:layout_toLeftOf="@+id/garbage2"
            android:layout_toStartOf="@+id/garbage2" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/garbage2"
            android:background="@drawable/garbage2"
            android:layout_alignTop="@+id/poster2"
            android:layout_toLeftOf="@+id/street_light_2"
            android:layout_toStartOf="@+id/street_light_2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/paper"
            android:background="@drawable/paper"
            android:layout_below="@+id/packet"
            android:layout_alignRight="@+id/street_light_2"
            android:layout_alignEnd="@+id/street_light_2" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/bottle"
            android:background="@drawable/can"
            android:layout_above="@+id/img_banana_layer_1"
            android:layout_alignRight="@+id/img_banana_layer_1"
            android:layout_alignEnd="@+id/img_banana_layer_1" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:id="@+id/imageView5"
            android:background="@drawable/bottle"
            android:layout_alignBottom="@+id/bone"
            android:layout_toLeftOf="@+id/poster4"
            android:layout_toStartOf="@+id/poster4" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:id="@+id/cupandstraw"
            android:background="@drawable/cupandstraw"
            android:layout_below="@+id/img_bench"
            android:layout_toLeftOf="@+id/img_banana_layer_2"
            android:layout_toStartOf="@+id/img_banana_layer_2" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="50dp"
            android:id="@+id/packet"
            android:background="@drawable/packet"
            android:layout_below="@+id/garbage2"
            android:layout_alignRight="@+id/paper"
            android:layout_alignEnd="@+id/paper" />

        <ImageView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/smoke1"
            android:background="@drawable/animation_smoke"
            android:layout_alignBottom="@+id/street_light_2"
            android:layout_toLeftOf="@+id/poster1"
            android:layout_toStartOf="@+id/poster1"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/smoke2"
            android:background="@drawable/animation_smoke"
            android:layout_above="@+id/img_billboard_1"
            android:layout_toRightOf="@+id/poster3"
            android:layout_toEndOf="@+id/poster3" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:id="@+id/shoes"
            android:background="@drawable/shoes"
            android:layout_alignTop="@+id/bottle"
            android:layout_toRightOf="@+id/garbage1"
            android:layout_toEndOf="@+id/garbage1"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/bone"
            android:background="@drawable/bone"
            android:layout_below="@+id/img_bench"
            android:layout_toLeftOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tools_container"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/level_wood_back">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:id="@+id/btn_map_in_level"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/btn_wood"
            android:background="#5A2C23"
            android:textSize="22sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint"
            android:id="@+id/button3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/btn_wood"
            android:background="#5A2C23"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/task_completed"
                style="@style/level_text"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_task"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/task_remain"
                style="@style/level_text"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_task_remain"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textColor="#F4DED1"
                android:textSize="26sp"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/btn_reset_level"
            style="@style/btn_wood"
            android:background="#5A2C23"
            android:layout_alignBottom="@+id/btn_map_in_level"
            android:layout_toRightOf="@+id/btn_map_in_level"
            android:layout_toEndOf="@+id/btn_map_in_level"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:textSize="22sp"/>
    </RelativeLayout>

</LinearLayout>
