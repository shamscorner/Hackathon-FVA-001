<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_level_completed"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_account_info"
            android:textColor="@color/wooden_text"
            android:gravity="center"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_account_info2"
            android:textColor="@color/wooden_text"
            android:gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/name"
            android:id="@+id/textView7"
            android:layout_marginTop="28dp"
            android:textColor="@color/wooden_text"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_play"
            android:layout_toStartOf="@+id/btn_play" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_name"
            android:textColor="@color/wooden_text"
            android:background="@drawable/rounded_transparent"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/btn_play"
            android:layout_alignStart="@+id/btn_play" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/password"
            android:id="@+id/textView8"
            android:textColor="@color/wooden_text"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_password"
            android:textColor="@color/wooden_text"
            android:background="@drawable/rounded_transparent"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/input_name"
            android:layout_alignStart="@+id/input_name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:id="@+id/btn_play"
            android:layout_below="@+id/input_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/rounded_transparent"
            android:textColor="@color/wooden_text"
            android:textSize="22sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress"
            android:id="@+id/btn_see_progress"
            android:layout_below="@+id/input_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/rounded_transparent"
            android:textColor="@color/wooden_text"
            android:textSize="22sp"/>

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/btn_play"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_btn_progress"
            android:onClick="backtohomepage"/>

    </RelativeLayout>
</LinearLayout>
